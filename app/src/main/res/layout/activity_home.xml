<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".mvp.view.HomeActivity"
    android:background="@color/background">
    <com.example.ext.viewgroup.NoScrollViewPager
        android:id="@+id/main_body"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/background"
        android:orientation="vertical"
        android:layout_marginBottom="50dp"/>
    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/home_navigation"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/white"
        android:layout_alignParentBottom="true"
        app:itemBackground="@null"
        app:itemTextAppearanceActive="@style/BottomTabTextStyle"
        app:itemTextAppearanceInactive="@style/BottomTabTextStyle"
        app:itemTextColor="@drawable/selector_home_navigation_text"
        app:labelVisibilityMode="labeled"
        app:menu="@menu/menu_home_bottom"/>


</RelativeLayout>